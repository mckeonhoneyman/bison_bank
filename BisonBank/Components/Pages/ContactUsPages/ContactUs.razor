@page "/contact"
@using Microsoft.EntityFrameworkCore

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Us</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>

        .contact-section {
            background-color: #f7f7f7;
            padding: 40px 0;
        }

        .info-box {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 15px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .form-control {
            border-radius: 25px;
        }

        .contact-section {
            box-sizing: border-box;
            padding: 40px;
            width: 95%;
        }

        .col-md-4 {
            padding-right: 40px;
        }

        .image-column img {
            width: 100%;
            height: auto;
            border-radius: 15px;
        }
    </style>
</head>
<body>

    <section class="contact-section">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h2 class="mb-4">Contact Us</h2>
                    <p>We are here to assist you! Feel free to reach out to us through the information below:</p>

                        <h3 class="mb-3">Bank & Support Information</h3>
                        <div class="form-group">
                        <textarea id="bankInfo" class="form-control" rows="4" style="overflow: hidden; height: auto;" readonly>
Bank Phone: 738-219-3227
Bank Email: customerservice@bisonbank.com

Tech Support: 926-167-7824
                        </textarea>
                        </div>
                </div>

                <div class="col-md-4">
                    <h3 class="mb-4">Our Location</h3>
                    <p>Find us at:</p>
                    <h5>1234 Main Street</h5>
                    <h5>Fargo, ND 58103</h5>
                    <p><br />Near The Silver Lining Creamery</p>
                </div>

                <div class="col-md-4 image-column">
                    <!-- Image credit: "Ohio National Bank 02" by Ɱ from Wikimedia Commons, used under Creative Commons, partial cropping may be done depending on screen size -->
                    <img src="Images/bank_outside.jpg" class="img-fluid rounded-3" style="width: 100%; height: auto;">
                </div>

            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

