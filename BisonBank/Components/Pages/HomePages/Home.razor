@page "/"

<style>

    body, html {
        margin: 0; 
        padding: 0; 
        width: 100%;
        height: 100%; 
        overflow: hidden; /* Prevent scrolling */
    }

    .transparent-bg {
        position: relative;
        width: 100%;
        height: 100vh; /* Full viewport height */
        overflow: hidden; /* Prevent overflow */
    }

        .transparent-bg img {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: contain;
            object-fit: cover; /* Ensures the image scales to fill the container */
            opacity: 1.0; /* Adjust transparency */
            z-index: -1; /* Keeps the image in the background */
        }

    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.4); /* Black overlay with 40% opacity */
        z-index: 0; /* Layer between the image and content */
    }

    .content {
        position: relative;
        color: white;
        text-align: center;
        margin: 0;
        padding: 0;
        z-index: 1; /* Ensure text appears above the overlay */
    }

        .content h4, .content h5 {
            font-size: 1.2rem; /* Smaller text for subheadings */
            font-weight: 400;
            text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.5); /* Lighter shadow */
            margin-bottom: 10px;
            line-height: 1.6; /* Improve readability */
        }

        .content h4 {
            font-weight: 600; /* Slightly bolder for importance */
            font-size: 1.5rem;
        }

    .button-container {
        margin-top: 60px;
    }

    .btn {
        font-size: 1rem;
        padding: 10px 30px;
        border: none;
        border-radius: 50px;
        background-color: burlywood;
        color: #fff;
        text-transform: uppercase;
        font-weight: 600;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.3);
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .btn:hover {
            background-color: #ff7f00; /* Darken on hover */
        }
</style>

<PageTitle>Home</PageTitle>

<body>
  <div class="transparent-bg">
        <!-- Image credit: "Snorty on Green BG" by dofiah from flikr, used under Creative Commons, partial cropping may be done depending on screen size -->
    <img src="Images/old_bison_background.jpg" alt="Background Image">
        <div class="overlay"></div>

    <div class="content">
            <h1><br />Welcome to Bison Bank Online!</h1>

            <h4>Your trusted partner in financial growth and security.</h4>

            <h5>
                <br />
                Explore the features designed to give you complete control over your finances, all from the comfort of your home or on the go.

                <br />Thank you for choosing Bison Bank. Together, we’ll achieve your goals—step by step. <br />
            </h5>

            <div class="button-container">
                <button class="btn" onclick="window.location.href='/accounts';">Get Started</button>
            </div>

            <h4><br /><br />Your Financial Journey, Powered by Trust.</h4>

    </div>
  </div>
</body>